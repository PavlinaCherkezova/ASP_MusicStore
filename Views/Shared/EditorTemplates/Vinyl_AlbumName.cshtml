@model Vinyl_AlbumName
<form class="form-horizontal">

    <div class="form-group row">
        @Html.LabelFor(x => x.Vinyl_album_name, "Album name", new {@class = "col-sm-2 col-form-label"})
        <div class="col-sm-10">
            @Html.EditorFor(x => x.Vinyl_album_name, new { @class =  "form-control" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(x => x.number_songs, "Number songs", new {@class = "col-sm-2 col-form-label"})

        <div class="col-sm-10">
            @Html.EditorFor(x => x.number_songs, new { @class =  "form-control" })
        </div>
            
    </div> 
</form>